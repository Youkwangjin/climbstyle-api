<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.kwang.climbstyle.domain.role.repository.RoleRepository">
    <resultMap id="roleResultMap"               type="com.kwang.climbstyle.domain.role.entity.RoleEntity">
        <id property="roleNo"                   column="role_no"/>
        <result property="roleName"             column="role_name"/>
        <result property="roleDescription"      column="role_description"/>
        <result property="roleCreated"          column="role_created"/>
        <result property="roleUpdated"          column="role_updated"/>
    </resultMap>

    <select id="selectRoleByRoleName" parameterType="String" resultMap="roleResultMap">
        SELECT
            role_no,
            role_name,
            role_description,
            role_created,
            role_updated
        FROM
            tb_role
        WHERE
            role_name = #{roleName}
    </select>
</mapper>