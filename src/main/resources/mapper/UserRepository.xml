<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.kwang.climbstyle.domain.user.repository.UserRepository">
    <resultMap id="userResultMap"               type="com.kwang.climbstyle.domain.user.entity.UserEntity">
        <id property="userNo"                   column="user_no"/>
        <result property="userId"               column="user_id"/>
        <result property="userPassword"         column="user_password"/>
        <result property="userNm"               column="user_name"/>
        <result property="userEmail"            column="user_email"/>
        <result property="userNickName"         column="user_nickname"/>
        <result property="userDeleteYn"         column="user_delete_yn"/>
        <result property="userImageUrl"         column="user_image_url"/>
        <result property="userIntro"            column="user_intro"/>
        <result property="userCreated"          column="user_created"/>
        <result property="userUpdated"          column="user_updated"/>
        <result property="userDeleted"          column="user_deleted"/>
    </resultMap>

    <select id="existUserId" parameterType="String" resultType="Boolean">
        SELECT EXISTS (
            SELECT 1
            FROM
                tb_user
            WHERE
                user_id = #{userId}
            AND
                user_delete_yn = 'N'
        )
    </select>

    <select id="existUserEmail" parameterType="String" resultType="Boolean">
        SELECT EXISTS (
            SELECT 1
            FROM
                tb_user
            WHERE
                user_email = #{userEmail}
              AND
                user_delete_yn = 'N'
        )
    </select>

    <select id="existUserNickName" parameterType="String" resultType="Boolean">
        SELECT EXISTS (
            SELECT 1
            FROM
                tb_user
            WHERE
                user_nickname = #{userNickName}
              AND
                user_delete_yn = 'N'
        )
    </select>

    <select id="selectUserByNo" parameterType="Integer" resultMap="userResultMap">
        SELECT
            user_no,
            user_id,
            user_password,
            user_name,
            user_email,
            user_nickname,
            user_delete_yn,
            user_image_url,
            user_intro,
            user_created,
            user_updated,
            user_deleted
        FROM
            tb_user
        WHERE
            user_no = #{userNo}
    </select>

    <select id="selectUserById" parameterType="String" resultMap="userResultMap">
        SELECT
            user_no,
            user_id,
            user_password,
            user_name
            user_email,
            user_nickname,
            user_delete_yn,
            user_image_url,
            user_intro,
            user_created,
            user_updated,
            user_deleted
        FROM
            tb_user
        WHERE
            user_id = #{userId}
    </select>

    <insert id="insert" parameterType="com.kwang.climbstyle.domain.user.entity.UserEntity" useGeneratedKeys="true"
            keyProperty="userNo">
        INSERT INTO tb_user (
            user_id,
            user_password,
            user_name,
            user_email,
            user_nickname,
            user_delete_yn,
            user_created
        ) VALUES (
            #{userId},
            #{userPassword},
            #{userNm},
            #{userEmail},
            #{userNickName},
            #{userDeleteYn},
            #{userCreated}
        )
    </insert>

    <update id="update" parameterType="com.kwang.climbstyle.domain.user.entity.UserEntity">
        UPDATE
            tb_user
        SET
            user_name = #{userNm},
            user_nickname = #{userNickName},
            user_intro = #{userIntro},
            user_updated = #{userUpdated}
        WHERE
            user_no = #{userNo}
    </update>

    <update id="updatePassword" parameterType="com.kwang.climbstyle.domain.user.entity.UserEntity">
        UPDATE
            tb_user
        SET
            user_password = #{userPassword},
            user_updated = #{userUpdated}
        WHERE
            user_no = #{userNo}
    </update>
</mapper>